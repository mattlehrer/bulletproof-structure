{
  "name": "echopig-api",
  "version": "0.0.1",
  "description": "API for Echopig, a service for podcast episode redistribution and personal podcast episode RSS feeds",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "heroku-postbuild": "npm run build",
    "start": "nodemon",
    "inspect": "nodemon --inspect src/app.ts",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js  --watchAll --runInBand",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "check-types": "tsc --noEmit",
    "prettier": "prettier --parser typescript --ignore-path .gitignore \"src/**/*.{js,json,ts,tsx}\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel test:coverage check-format lint build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mattlehrer/echopig-api.git "
  },
  "author": "Matt Lehrer",
  "license": "UNLICENSED",
  "dependencies": {
    "agenda": "^2.2.0",
    "agendash": "^1.0.0",
    "argon2": "^0.25.1",
    "body-parser": "^1.19.0",
    "celebrate": "^11.0.0",
    "cors": "^2.8.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "event-dispatch": "^0.4.1",
    "eventemitter3": "^4.0.0",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.17.15",
    "mailgun-js": "^0.22.0",
    "method-override": "^3.0.0",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.27",
    "mongoose": "^5.8.0",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.12",
    "typedi": "^0.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/agenda": "^2.0.4",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.5.34",
    "@types/node": "^12.12.17",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "acorn": "^7.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "is-ci": "^2.0.0",
    "is-ci-cli": "^2.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "bugs": {
    "url": "https://github.com/mattlehrer/echopig-api/issues"
  },
  "homepage": "https://www.echopig.com"
}
